@inject IStringLocalizer<MainLayout> L

<MudAppBar Elevation="0">
    <MudTooltip Text="Toggle Drawer">
        <MudIconButton Icon="@Icons.Material.Rounded.Notes" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
    </MudTooltip>
    <MudButton Variant="Variant.Text" DisableElevation="true" Href="/">
        @L["Showmatics"]
    </MudButton>
    <MudSpacer />
    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
        <MudButton DisableElevation Variant="Variant.Filled" Color="Color.Secondary"
                    Href="/contracts" Target="_blank" StartIcon="@Icons.Material.Filled.Add">
             @L["Create"]
         </MudButton>
        <MudDivider Vertical="true" FlexItem="true" DividerType="DividerType.Middle" Class="mx-4 my-5" />
        <MudTooltip Text="Support">
            <MudMenu Icon="@Icons.Material.Filled.SupportAgent" Color="Color.Inherit" Dense="true" AnchorOrigin="Origin.BottomCenter">
                <MudText Typo="Typo.body2" Class="px-4 py-2"><b>@L["Community"]</b></MudText>
                 <MudMenuItem Href="https://www.facebook.com" Target="_blank">
                     @L["Facebook"]
                </MudMenuItem>
                 <MudMenuItem Href="https://www.twitter.com" Target="_blank">
                     @L["Twitter"]
                 </MudMenuItem>
            </MudMenu>
        </MudTooltip>
        <LanguageSelector />
        <NotificationConnectionStatus></NotificationConnectionStatus>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
         <LanguageSelector />
         <MudMenu Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" Dense="true" AnchorOrigin="Origin.BottomCenter">
             <MudText Typo="Typo.body2" Class="px-4 py-2"><b>@L["Community"]</b></MudText>
             <MudMenuItem Href="https://www.facebook.com" Target="_blank">
                 @L["Facebook"]
             </MudMenuItem>
             <MudMenuItem Href="https://www.twitter.com" Target="_blank">
                 @L["Twitter"]
             </MudMenuItem>
        </MudMenu>
        <NotificationConnectionStatus></NotificationConnectionStatus>
    </MudHidden>
    <MudMenu AnchorOrigin="Origin.BottomRight" LockScroll="true" TransformOrigin="Origin.TopRight">
        <ActivatorContent>
            <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" />
        </ActivatorContent>
        <ChildContent>
            <div class="py-2" style="min-width: 220px">
                <PersonCard Class="mt-n2" Style="margin-bottom:0px!important" />
                <MudMenuItem OnClick="Profile">
                    <div class="d-flex">
                        <MudIcon Class="mx-2" Icon="@Icons.Material.Filled.Person" />
                        <MudText>@L["Account"]</MudText>
                    </div>
                </MudMenuItem>
                
                 <MudMenuItem Href="/dashboard">
                    <div class="d-flex">
                        <MudIcon Class="mx-2" Icon="@Icons.Material.Filled.Dashboard" />
                        <MudText>@L["Dashboard"]</MudText>
                    </div>
                </MudMenuItem>
                <div class="mt-4 mx-4">
                    <MudButton Color="Color.Error" FullWidth="true" StartIcon="@Icons.Material.Filled.Logout"
                        Variant="Variant.Filled" OnClick="Logout">
                         @L["Logout"]
                    </MudButton>
                </div>
            </div>
        </ChildContent>
    </MudMenu>
</MudAppBar>

<MudDrawer @bind-Open="_drawerOpen" Elevation="25" ClipMode="DrawerClipMode.Never">
    <NavMenu />
</MudDrawer>

<MudMainContent>
    <MudContainer MaxWidth="MaxWidth.False" Class="">
        @ChildContent
        <MudScrollToTop TopOffset="400" Style="z-index:2000;">
            <MudFab StartIcon="@Icons.Material.Filled.KeyboardArrowUp" Color="Color.Primary" />
        </MudScrollToTop>
    </MudContainer>
</MudMainContent>